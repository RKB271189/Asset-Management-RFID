{{#section "content"}}
<div class="row">
    <div class="container">
        <h3 class="page-all-header">Create Asset</h3>
        <div class="panel panel-default">
            <form method="POST" action="/web/asset/create-asset">
                <div class="panel-heading" style="font-weight: 600;">Field mark with (<span
                        style="color: red;">*</span>)
                    are mandatory</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label><span style="color: red;">*</span>Asset Code</label>
                        <div class="col-lg-12">
                            <input type="text" name="Asset_Code" maxlength="8" class="form-control"
                                placeholder="Enter Asset Code">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Asset Type</label>
                        <div class="col-lg-12">
                            {{!-- <input type="text" name="Asset_Type" class="form-control" placeholder="Enter Asset Type"> --}}
                            <select name="Asset_Type" class="form-control">
                                <option value="">Select Asset Type (Code-Description)</option>
                                {{#if type}}
                                {{#each type}}
                                <option value="{{Type_Code}}">{{Type_Code}}-{{Description}}</option>
                                {{/each}}
                                {{/if}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Description</label>
                        <div class="col-lg-12">
                            <input type="text" name="Description" class="form-control" maxlength="32"
                                placeholder="Enter Description">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Site Code</label>
                        <div class="col-lg-12">
                            <input type="text" name="Site_Code" class="form-control" placeholder="Enter Site Code"
                                value="{{site_code}}" readonly>
                        </div>
                    </div>
                    {{!-- <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Tag Id</label>
                        <div class="col-lg-12">
                            <input type="text" name="Tag_Id" class="form-control" placeholder="Enter Tag Id">
                        </div>
                    </div> --}}
                    <div class="form-group" style="padding-top:30px;">
                        <label>Responsible Warehouse</label>
                        <div class="col-lg-12">
                            <input type="text" name="Responsible_Warehouse" class="form-control"
                                placeholder="Enter Responsible Warehouse Number">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>Serial Number</label>
                        <div class="col-lg-12">
                            <input type="text" name="Serial_Number" class="form-control"
                                placeholder="Enter Serail Number">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>Model Number</label>
                        <div class="col-lg-12">
                            <input type="text" name="Model_Number" class="form-control"
                                placeholder="Enter Model Number">
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-danger" value="Submit">
                    <span class="error-message">
                        {{#if message}}
                        {{message}}
                        {{/if}}
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('li-configuration').classList.add('active');
</script>
{{/section}}