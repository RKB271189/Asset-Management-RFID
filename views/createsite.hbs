{{#section "content"}}
<div class="row">
    <div class="container">
        <h3 class="page-all-header">Create Site</h3>
        <div class="panel panel-default">
            <form method="POST" action="/web/site/create-site">
                <div class="panel-heading" style="font-weight: 600;">Field mark with (<span
                        style="color: red;">*</span>)
                    are mandatory</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label><span style="color: red;">*</span>Site Code</label>
                        <div class="col-lg-12">
                            <input type="text" name="Site_Code" class="form-control" placeholder="Enter Site Code">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Site Name</label>
                        <div class="col-lg-12">
                            <input type="text" name="Site_Name" class="form-control" placeholder="Enter Site Name">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Zone</label>
                        <div class="col-lg-12">
                            <input type="text" name="Zone" class="form-control" placeholder="Enter Zone">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Region</label>
                        <div class="col-lg-12">
                            <input type="text" name="Region" class="form-control" placeholder="Enter Region">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>District</label>
                        <div class="col-lg-12">
                            <input type="text" name="District" class="form-control" placeholder="Enter District">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>State</label>
                        <div class="col-lg-12">
                            <input type="text" name="State" class="form-control" placeholder="Enter State">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>City</label>
                        <div class="col-lg-12">
                            <input type="text" name="City" class="form-control" placeholder="Enter City">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>Address 1</label>
                        <div class="col-lg-12">
                            <input type="text" name="Address1" class="form-control" placeholder="Enter Address">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label>Address 2</label>
                        <div class="col-lg-12">
                            <input type="text" name="Address2" class="form-control" placeholder="Enter Address">
                        </div>
                    </div>

                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-danger" value="Submit">
                      <span class="error-message">
                        {{#if message}}
                         {{message}}
                        {{/if}}
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('li-configuration').classList.add('active');
</script>
{{/section}}