<div class="container">
    <div class="row" style="padding-bottom: 30px;">
        <div class="col-md-3"></div>
        <div class="col-md-6"><img src="/images/avtar.png"
                style="width: 120px;height:100px;display:block;margin:auto;padding-top: 10px;"></div>
        <div class="col-md-3"></div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <form method="POST" action="/web/user/signin" style="padding-top: 15px;">
                        <div class="panel-heading" style="font-weight: 600;">
                            <h3 class="login-header">Relcon Systems</h3>
                            <h3 class="login-header">Welcome To Asset Management</h3>
                        </div>
                        <div class="panel-body">
                            <div class="form-group" style="padding-bottom: 60px;">
                                <label class="label-modal label-css">Login Id</label>
                                <div class="col-lg-12">
                                    <input type="text" name="Login_Id" class="form-control"
                                        placeholder="Enter Login Id">
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 45px;">
                                <label class="label-modal label-css">Password</label>
                                <div class="col-lg-12">
                                    <input type="password" name="Password" class="form-control" placeholder="Password">
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="submit" class="btn btn-primary relcon-btn" value="Login">
                            <span class="error-message">
                                {{#if message}}
                                {{message}}
                                {{/if}}
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
</div>
</div>