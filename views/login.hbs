<div class="container">
    <div class="row" style="padding-bottom: 30px;">
        <div class="col-md-3"></div>
        <div class="col-md-6"><img src="/images/avtar.png"
                style="width: 120px;height:100px;display:block;margin:auto;padding-top: 10px;"></div>
        <div class="col-md-3"></div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="container-fluid" style="border: 2px dashed #2f5a78;">
                    <form method="POST" action="/web/user/signin" style="padding-top: 15px;">
                        <div class="form-group" style="padding-bottom: 60px;">
                            <label class="label-modal">Login Id</label>
                            <div class="col-lg-12">
                                <input type="text" name="Login_Id" class="form-control" placeholder="Enter Login Id">
                            </div>
                        </div>
                        <div class="form-group" style="padding-bottom: 45px;">
                            <label class="label-modal">Password</label>
                            <div class="col-lg-12">
                                <input type="password" name="Password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-10">
                                    <span class="error-message">
                                        {{#if message}}
                                        {{message}}
                                        {{/if}}
                                    </span>
                                </div>
                                <div class="col-lg-2" style="padding-top: 25px;padding-bottom:10px;">
                                    <input type="submit" class="btn btn-primary relcon-btn" value="Sign In">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>