{{#section "content"}}
<div class="row">
    <div class="container">
        <h3 class="page-all-header">Create Asset Type</h3>
        <div class="panel panel-default">
            <form method="POST" action="/web/asset/create-type">
                <div class="panel-heading" style="font-weight: 600;">Field mark with (<span
                        style="color: red;">*</span>)
                    are mandatory</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label><span style="color: red;">*</span>Equipment Code(Type Code)</label>
                        <div class="col-lg-12">
                            <input type="text" name="Type_Code" class="form-control" placeholder="Enter Equipment Code(Type Code)">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Description</label>
                        <div class="col-lg-12">
                            <input type="text" name="Description" class="form-control" placeholder="Enter Description">
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Life Month</label>
                        <div class="col-lg-12">
                            <input type="text" name="Life_Month" class="form-control" placeholder="Enter Life Month">
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-danger" value="Submit">
                    <span class="error-message">
                        {{#if message}}
                        {{message}}
                        {{/if}}
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('li-configuration').classList.add('active');
</script>
{{/section}}