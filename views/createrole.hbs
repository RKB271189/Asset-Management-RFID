{{#section "content"}}
<div class="jumbotron jumbotron-j">
    <div class="container">
        <h3>Create Role</h3>
        <div class="panel panel-default">
            <form method="POST" action="/web/user/create-role">
                <div class="panel-heading" style="font-weight: 600;">Field mark with (<span
                        style="color: red;">*</span>)
                    are mandatory</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label><span style="color: red;">*</span>Role Code</label>
                        <div class="col-lg-12">
                            <input type="text" name="Role_Code" class="form-control" placeholder="Enter Role Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <label><span style="color: red;">*</span>Role Type</label>
                        <div class="col-lg-12">
                            <input type="text" name="Role_Type" class="form-control" placeholder="Enter Role Type">
                        </div>
                    </div>                    
                    <div class="form-group" style="padding-top:30px;">
                        <label><span style="color: red;">*</span>Role Name</label>
                        <div class="col-lg-12">
                            <input type="text" name="Role_Name" class="form-control" placeholder="Enter Role Name">
                        </div>
                    </div>

                </div>
                <div class="panel-footer">
                    <input type="submit" class="btn btn-danger" value="Submit">
                    <span class="error-message">
                        {{#if message}}
                        {{message}}
                        {{/if}}
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.getElementById('li-user').classList.add('active');
</script>
{{/section}}